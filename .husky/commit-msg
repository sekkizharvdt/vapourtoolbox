echo "ğŸ” Validating commit message..."

# Run commitlint
pnpm commitlint --edit $1

# If validation fails, prevent commit
if [ $? -ne 0 ]; then
  echo ""
  echo "âŒ Commit message does not follow conventional commit format."
  echo ""
  echo "ğŸ“ Format: <type>(<scope>): <subject>"
  echo ""
  echo "Examples:"
  echo "  feat: Add user authentication"
  echo "  fix: Resolve entity loading issue"
  echo "  docs: Update README"
  echo "  chore: Update dependencies"
  echo ""
  echo "Valid types: feat, fix, docs, style, refactor, perf, test, build, ci, chore, revert"
  echo ""
  exit 1
fi

echo "âœ… Commit message is valid!"
