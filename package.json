{
  "name": "vapour-toolbox",
  "version": "0.1.0",
  "private": true,
  "description": "Vapour Toolbox - Unified Business Management Platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "type-check": "turbo type-check",
    "check-type-safety": "node scripts/check-type-safety.js",
    "clean": "turbo clean && rm -rf node_modules",
    "prepare": "husky",
    "emulator": "firebase emulators:start",
    "emulator:seed": "node scripts/emulator/seed-test-data.js",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:coverage": "turbo test:coverage",
    "test:e2e": "cd apps/web && pnpm test:e2e",
    "test:e2e:ui": "cd apps/web && pnpm test:e2e:ui"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "firebase": "^12.8.0",
    "firebase-admin": "^13.6.0",
    "firebase-tools": "^15.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pdf.js-extract": "^0.2.1",
    "prettier": "^3.8.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "turbo": "^2.8.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.54.0"
  },
  "packageManager": "pnpm@10.19.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "pnpm": {
    "overrides": {
      "glob@<10.5.0": ">=10.5.0",
      "node-forge@<1.3.2": ">=1.3.2",
      "js-yaml": ">=4.1.1",
      "body-parser@>=2.2.0 <2.2.1": ">=2.2.1",
      "jws@<3.2.3": ">=3.2.3",
      "jws@=4.0.0": ">=4.0.1",
      "qs@<6.14.1": ">=6.14.1",
      "react": "^19.2.1",
      "react-dom": "^19.2.1",
      "tar@<7.5.8": ">=7.5.8",
      "@modelcontextprotocol/sdk@>=1.10.0 <=1.25.3": ">=1.26.0",
      "lodash@>=4.0.0 <=4.17.22": ">=4.17.23",
      "diff@<4.0.4": ">=4.0.4",
      "fast-xml-parser@>=4.1.3 <5.3.6": ">=5.3.6",
      "@isaacs/brace-expansion@<=5.0.0": ">=5.0.1",
      "axios@<=1.13.4": ">=1.13.5",
      "minimatch@<10.2.3": ">=10.2.3",
      "basic-ftp@<5.2.0": ">=5.2.0",
      "rollup@>=4.0.0 <4.59.0": ">=4.59.0"
    }
  }
}
