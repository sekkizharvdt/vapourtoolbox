{
  "name": "@vapour/functions",
  "version": "0.1.0",
  "private": true,
  "description": "Firebase Cloud Functions for Vapour Toolbox",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "serve": "pnpm build && firebase emulators:start --only functions",
