{
  "name": "@vapour/functions",
  "version": "0.1.0",
  "private": true,
  "description": "Firebase Cloud Functions for Vapour Toolbox",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "serve": "pnpm build && firebase emulators:start --only functions",
    "shell": "pnpm build && firebase functions:shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "@types/archiver": "^7.0.0",
    "@vapour/firebase": "workspace:*",
    "@vapour/types": "workspace:*",
    "@vapour/validation": "workspace:*",
    "archiver": "^7.0.1",
    "firebase-admin": "^13.5.0",
    "firebase-functions": "^6.1.1",
    "handlebars": "^4.7.8",
    "mathjs": "^15.1.0",
    "puppeteer": "^24.30.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.2",
    "firebase-functions-test": "^3.4.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.7.3"
  }
}
