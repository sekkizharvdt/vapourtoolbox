# Firebase Client Configuration (Public - Safe to expose)
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Admin Configuration (Secret - NEVER expose to client)
# Only needed for server-side operations
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_SERVICE_ACCOUNT_KEY='{"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}'

# App Configuration
NEXT_PUBLIC_APP_NAME="Vapour Toolbox"
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Allowed Client Domains (comma-separated)
# External users from these domains can be invited as CLIENT_PM
# Example: clientcompany1.com,clientcompany2.com
NEXT_PUBLIC_ALLOWED_CLIENT_DOMAINS=
