{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": ["node_modules", ".git", "firebase-debug.log", "firebase-debug.*.log", "src"],
      "predeploy": ["cd functions && npm run build"],
      "runtime": "nodejs20"
    }
  ],
  "hosting": {
    "public": "apps/web/out",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/auth/email-link",
        "destination": "/auth/email-link.html"
      },
      {
        "source": "/accounting/cost-centres/*",
        "destination": "/accounting/cost-centres/placeholder.html"
      },
      {
        "source": "/bought-out/*",
        "destination": "/bought-out/placeholder.html"
      },
      {
        "source": "/documents/*",
        "destination": "/documents/placeholder.html"
      },
      {
        "source": "/estimation/*",
        "destination": "/estimation/placeholder.html"
      },
      {
        "source": "/feedback/*",
        "destination": "/feedback/placeholder.html"
      },
      {
        "source": "/materials/*/edit",
        "destination": "/materials/placeholder/edit.html"
      },
      {
        "source": "/materials/*",
        "destination": "/materials/placeholder.html"
      },
      {
        "source": "/procurement/amendments/*",
        "destination": "/procurement/amendments/placeholder.html"
      },
      {
        "source": "/procurement/goods-receipts/*",
        "destination": "/procurement/goods-receipts/placeholder.html"
      },
      {
        "source": "/procurement/packing-lists/*",
        "destination": "/procurement/packing-lists/placeholder.html"
      },
      {
        "source": "/procurement/pos/*",
        "destination": "/procurement/pos/placeholder.html"
      },
      {
        "source": "/procurement/purchase-requests/*/edit",
        "destination": "/procurement/purchase-requests/placeholder/edit.html"
      },
      {
        "source": "/procurement/purchase-requests/*",
        "destination": "/procurement/purchase-requests/placeholder.html"
      },
      {
        "source": "/procurement/rfqs/*/edit",
        "destination": "/procurement/rfqs/placeholder/edit.html"
      },
      {
        "source": "/procurement/rfqs/*/offers",
        "destination": "/procurement/rfqs/placeholder/offers.html"
      },
      {
        "source": "/procurement/rfqs/*",
        "destination": "/procurement/rfqs/placeholder.html"
      },
      {
        "source": "/procurement/three-way-match/*",
        "destination": "/procurement/three-way-match/placeholder.html"
      },
      {
        "source": "/procurement/work-completion/*",
        "destination": "/procurement/work-completion/placeholder.html"
      },
      {
        "source": "/projects/*/budget",
        "destination": "/projects/placeholder/budget.html"
      },
      {
        "source": "/projects/*/charter",
        "destination": "/projects/placeholder/charter.html"
      },
      {
        "source": "/projects/*/documents",
        "destination": "/projects/placeholder/documents.html"
      },
      {
        "source": "/projects/*/objectives",
        "destination": "/projects/placeholder/objectives.html"
      },
      {
        "source": "/projects/*/procurement",
        "destination": "/projects/placeholder/procurement.html"
      },
      {
        "source": "/projects/*/reports",
        "destination": "/projects/placeholder/reports.html"
      },
      {
        "source": "/projects/*/scope",
        "destination": "/projects/placeholder/scope.html"
      },
      {
        "source": "/projects/*/team",
        "destination": "/projects/placeholder/team.html"
      },
      {
        "source": "/projects/*/technical",
        "destination": "/projects/placeholder/technical.html"
      },
      {
        "source": "/projects/*/timeline",
        "destination": "/projects/placeholder/timeline.html"
      },
      {
        "source": "/projects/*/vendors",
        "destination": "/projects/placeholder/vendors.html"
      },
      {
        "source": "/projects/*",
        "destination": "/projects/placeholder.html"
      },
      {
        "source": "/proposals/enquiries/*/edit",
        "destination": "/proposals/enquiries/placeholder/edit.html"
      },
      {
        "source": "/proposals/enquiries/*",
        "destination": "/proposals/enquiries/placeholder.html"
      },
      {
        "source": "/proposals/*/edit",
        "destination": "/proposals/placeholder/edit.html"
      },
      {
        "source": "/proposals/*",
        "destination": "/proposals/placeholder.html"
      },
      {
        "source": "/hr/leaves/new",
        "destination": "/hr/leaves/new.html"
      },
      {
        "source": "/hr/leaves/my-leaves",
        "destination": "/hr/leaves/my-leaves.html"
      },
      {
        "source": "/hr/leaves/calendar",
        "destination": "/hr/leaves/calendar.html"
      },
      {
        "source": "/hr/leaves/*",
        "destination": "/hr/leaves/placeholder.html"
      },
      {
        "source": "/hr/travel-expenses/*",
        "destination": "/hr/travel-expenses/placeholder.html"
      },
      {
        "source": "/hr/settings/leave-types",
        "destination": "/hr/settings/leave-types.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false,
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "X-Frame-Options",
            "value": "DENY"
          },
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "Referrer-Policy",
            "value": "strict-origin-when-cross-origin"
          },
          {
            "key": "Permissions-Policy",
            "value": "camera=(), microphone=(), geolocation=()"
          },
          {
            "key": "Strict-Transport-Security",
            "value": "max-age=31536000; includeSubDomains; preload"
          },
          {
            "key": "Content-Security-Policy",
            "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.gstatic.com https://apis.google.com https://identitytoolkit.googleapis.com; connect-src 'self' http://localhost:* https://*.googleapis.com https://*.firebaseio.com wss://*.firebaseio.com https://securetoken.googleapis.com https://*.cloudfunctions.net; img-src 'self' data: https:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' data: https://fonts.gstatic.com; frame-src https://*.firebaseapp.com https://*.web.app https://accounts.google.com https://content-firebaseappcheck.googleapis.com; object-src 'none'; base-uri 'self';"
          }
        ]
      },
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg|webp|js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5000
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true
  }
}
